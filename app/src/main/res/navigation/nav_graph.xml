<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.prmto.mova_movieapp.presentation.splash.SplashFragment"
        android:label="SplashFragmentFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/actionToHomeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.prmto.mova_movieapp.presentation.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailBottomSheet"
            app:destination="@id/detailBottomSheet" />
    </fragment>
    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.prmto.mova_movieapp.presentation.explore.ExploreFragment"
        android:label="ExploreFragment"
        tools:layout="@layout/fragment_explore">
        <action
            android:id="@+id/action_exploreFragment_to_filterBottomSheetFragment"
            app:destination="@id/filterBottomSheetFragment" />
    </fragment>
    <fragment
        android:id="@+id/myListFragment"
        android:name="com.prmto.mova_movieapp.presentation.myList.MyListFragment"
        android:label="MyListFragment"
        tools:layout="@layout/fragment_my_list" />
    <dialog
        android:id="@+id/filterBottomSheetFragment"
        android:name="com.prmto.mova_movieapp.presentation.filter_bottom_sheet.FilterBottomSheetFragment"
        android:label="FilterBottomSheetFragment"
        tools:layout="@layout/fragment_bottom_sheet"/>
    <dialog
        android:id="@+id/detailBottomSheet"
        android:name="com.prmto.mova_movieapp.presentation.detail_bottom_sheet.DetailBottomSheet"
        android:label="DetailBottomSheet"
        tools:layout="@layout/fragment_detail_bottom_sheet" >
        <argument
            android:name="Movie"
            app:argType="com.prmto.mova_movieapp.domain.models.Movie"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="TvSeries"
            app:argType="com.prmto.mova_movieapp.domain.models.TvSeries"
            app:nullable="true"
            android:defaultValue="@null" />
    </dialog>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.prmto.mova_movieapp.presentation.setting.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>